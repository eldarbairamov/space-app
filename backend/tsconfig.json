{
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "rootDir": "./src",
      "moduleResolution": "node",
      "typeRoots": [
         "./node_modules/@types",
         "./src/type"
      ],
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
   }
}
